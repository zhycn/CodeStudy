# ============================================================================
# EditorConfig for Java + Spring Boot Project
# ============================================================================
#
# This file defines coding style rules for the project.
# EditorConfig helps maintain consistent coding styles across different editors
# and IDEs. For more information, visit: https://EditorConfig.org
#
# Project Standards:
# - Java: Google Java Style Guide (2-space indentation)
# - Spring Boot: Standard Spring conventions
# - File Encoding: UTF-8
# - Line Endings: LF (Unix-style)
# ============================================================================

# Top-most EditorConfig file - this stops searching for other .editorconfig files
root = true

# ============================================================================
# GLOBAL SETTINGS (applies to all files unless overridden)
# ============================================================================

[*]
# Unix-style newlines with a newline ending every file
end_of_line = lf
# Ensure every file ends with a newline
insert_final_newline = true
# Use UTF-8 character encoding
charset = utf-8
# Remove trailing whitespace from lines
trim_trailing_whitespace = true
# Maximum line width (soft limit, some tools may enforce stricter limits)
max_line_length = 100

# ============================================================================
# JAVA AND SPRING BOOT SPECIFIC CONFIGURATIONS
# ============================================================================

# Java source files
[*.java]
indent_style = space
indent_size = 2
# Tab width for display purposes
tab_width = 2

# Spring Boot configuration files
[*.{yml,yaml}]
indent_style = space
indent_size = 2
# YAML files are sensitive to indentation

# Spring Boot properties files
[*.properties]
indent_style = space
indent_size = 4

# Maven POM files and XML configuration
[*.xml]
indent_style = space
indent_size = 2

# Gradle build files
[*.gradle]
indent_style = space
indent_size = 2

# ============================================================================
# WEB AND FRONTEND FILES
# ============================================================================

# JavaScript/TypeScript files (for frontend components)
[*.{js,ts,jsx,tsx,vue,mjs}]
indent_style = space
indent_size = 2

# HTML templates
[*.html]
indent_style = space
indent_size = 2

# CSS/Sass stylesheets
[*.{css,scss,less}]
indent_style = space
indent_size = 2

# JSON configuration files
[*.json]
indent_style = space
indent_size = 2

# ============================================================================
# DOCUMENTATION AND MARKUP
# ============================================================================

# Markdown documentation files
[*.md]
# Don't trim trailing whitespace in markdown (affects line breaks)
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

# AsciiDoc documentation
[*.adoc]
indent_style = space
indent_size = 2

# ============================================================================
# BUILD AND CONFIGURATION FILES
# ============================================================================

# Makefiles require tab indentation
[Makefile]
indent_style = tab

# Package.json for Node.js dependencies
[package.json]
indent_style = space
indent_size = 2

# Dockerfile
[Dockerfile]
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# ============================================================================
# SPRING BOOT SPECIFIC FILE TYPES
# ============================================================================

# Spring Boot application properties
[application*.properties]
indent_style = space
indent_size = 4

# Spring Boot profile-specific properties
[application-*.properties]
indent_style = space
indent_size = 4

# Spring configuration XML
[*-context.xml]
indent_style = space
indent_size = 2

# ============================================================================
# TEST AND QUALITY ASSURANCE FILES
# ============================================================================

# Test configuration files
[*.{test,spec}.{java,js,ts}]
indent_style = space
indent_size = 2

# Code quality configuration
[checkstyle*.xml]
indent_style = space
indent_size = 2

# ============================================================================
# IDE SPECIFIC CONFIGURATIONS
# ============================================================================

# IntelliJ IDEA project files
[*.iml]
indent_style = space
indent_size = 2

# Eclipse project files
[.project,.classpath]
indent_style = space
indent_size = 2

# VS Code settings
[.vscode/*]
indent_style = space
indent_size = 2

# ============================================================================
# ADDITIONAL FILE TYPE SUPPORT
# ============================================================================

# Python scripts (if needed for build automation)
[*.py]
indent_style = space
indent_size = 4

# SQL scripts
[*.sql]
indent_style = space
indent_size = 2

# Batch files (Windows)
[*.bat]
indent_style = space
indent_size = 2

# PowerShell scripts
[*.ps1]
indent_style = space
indent_size = 2
